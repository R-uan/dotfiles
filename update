#!/bin/bash

if [ "$EUID" -ne 0 ]; then
	echo "Please run as root"
	exit 1
fi

SUCCESS="(˶ᵔ ᵕ ᵔ˶)"
NOT_FOUND="( ╹ -╹)?"

backup_targets=("hypr" "kitty" "quickshell" "rofi" "starship" "btop" "mako" "fastfetch")

for config in "${backup_targets[@]}"; do
	if [ -d "/home/$SUDO_USER/.config/$config" ]; then
		if [ -d "./home/.config/$config" ]; then
			rm -rf "./home/.config/$config"
		fi
		cp -r "/home/$SUDO_USER/.config/$config" "home/.config/"
		echo "$SUCCESS $config backed"
	elif [ -f "/home/$SUDO_USER/.config/$config" ]; then
		cp "/home/$SUDO_USER/.config/$config" "home/.config/"
		echo "$SUCCESS $config backed"
	fi
done
